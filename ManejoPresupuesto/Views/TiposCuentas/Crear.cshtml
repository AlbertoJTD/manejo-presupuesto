@model TipoCuenta

@{
	ViewData["Title"] = "Crear Tipo Cuenta";
}

<h1>Crear tipo de cuentas</h1>
<h5>El <strong>tipo de cuenta</strong> se refiere a cómo podemos agrupar cuentas. Ejemplos: Préstamos, tarjetas de crédito, etc.</h5>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form asp-action="Crear">
	<div class="mb-3">
		<label asp-for="Nombre" class="form-label" asp>Nombre</label>
		<input asp-for="Nombre" type="text" class="form-control" />
		<span asp-validation-for="Nombre" class="text-danger"></span>
	</div>

	<button type="submit" class="btn btn-primary">Enviar</button>
	<a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>


@section Scripts {
	<partial name="_ValidationScriptsPartial"></partial>
}